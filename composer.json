{
  "name": "event-sourcery/event-sourcery",
  "description": "A Minimalistic PHP Event Sourcing / CQRS Library with GDPR Support",
  "keywords": [
    "event sourcery",
    "event sourcing",
    "cqrs",
    "domain event",
    "gdpr",
    "reactive"
  ],
  "authors": [
    {
      "name": "Shawn McCool",
      "email": "shawn@heybigname.com",
      "homepage": "http://shawnmc.cool/"
    }
  ],
  "require": {
    "php": "^7.1",
    "ramsey/uuid": "^3",
    "psr/container": "^1",
    "ext-json": "*"
  },
  "require-dev": {
    "phpspec/phpspec": "^4"
  },
  "autoload": {
    "psr-4": {
      "EventSourcery\\EventSourcery\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "spec\\EventSourcery\\EventSourcery\\": "spec/"
    },
    "files": [
      "src/PhpSpec/expect.php"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "bin-dir": "bin"
  },
  "license": "MIT"
}
