{
  "name": "event-sourcery/event-sourcery",
  "description": "A Minimalistic PHP Event Sourcing / CQRS Library with GDPR Support",
  "keywords": [
    "event sourcery",
    "event sourcing",
    "cqrs",
    "domain event",
    "reactive"
  ],
  "require": {
    "php": ">=7.4",
    "ramsey/uuid": ">=3",
    "psr/container": "^1",
    "ext-json": "*",
    "ext-sodium": "*"
  },
  "require-dev": {
    "phpspec/phpspec": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "EventSourcery\\EventSourcery\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "spec\\EventSourcery\\EventSourcery\\": "spec/"
    },
    "files": [
      "src/PhpSpec/expect.php"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "bin-dir": "bin"
  },
  "license": "MIT"
}
